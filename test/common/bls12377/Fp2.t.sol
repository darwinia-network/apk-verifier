pragma solidity ^0.8.17;

import "forge-std/Test.sol";
import "../../../src/common/bls12377/Fp2.sol";

contract BLS12FP2Test is Test {
    using BLS12FP2 for bytes;
    using BLS12FP2 for Bls12Fp2;

    function test_expand_message_xmd() public {
        bytes memory m =
            hex"";
        bytes memory uniform_bytes = m.expand_message_xmd();
        bytes memory e =
            hex"";
        assertEq(e, uniform_bytes);
    }

    function test_hash_to_field() public {
        bytes memory m =
            hex"";
        bytes memory e =
            hex"";
        Bls12Fp2[2] memory u = m.hash_to_field();
        bytes memory o = abi.encodePacked(u[0].debug(), u[1].debug());
        assertEq(e, o);
    }
}
